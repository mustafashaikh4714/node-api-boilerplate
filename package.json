  "main": "app.js",
  "scripts": {
    "start": "webpack --config webpack.dev.js && env-cmd -f env.dev node ./dist/bundle.js",
    "start:live": "webpack --config webpack.prod.js && env-cmd -f env.prod node ./dist/bundle.js",
    "server": "nodemon -r esm app.js",
    "dev-local": "env-cmd -f dev.env nodemon -r esm app.js",
    "prod-local": "env-cmd -f prod.env nodemon -r esm app.js",
    "dev:server:win": "SET NODE_ENV=local & env-cmd dev.env nodemon -r esm app.js",
    "lint": "eslint"
  },
