    "babel": "^6.23.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
